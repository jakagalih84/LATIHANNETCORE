@{
    ViewData["Title"] = "Home Page";

    var username = User.Claims
                    .Where(c => c.Type == "username")
                        .Select(c => c.Value).SingleOrDefault();
}

@section Styles{
    <style>
        .btntambah{
            margin-top: 10px;
            margin-bottom: 10px;
            margin-right: 10px;
        }
    </style>
}

<div class="row">
    <div class="col-md-12">
        <a href="/Home/Tambah" class="btn btn-sm btn-success btntambah">Tambah</a> 
        <a href="/Home/ExportSeminar" class="btn btn-sm btn-warning btntambah">Excel</a>
        <a href="/Home/CetakPdf" class="btn btn-sm btn-info btntambah">Pdf</a>
        <table style="width: 100%;" class="table table-responsive-lg table-bordered table-striped">
            <thead>
                <tr>
                    <th>NPP</th>
                    <th>Nama</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model.table)
               {
                      <tr>
                          <td>@item.npp</td>
                          <td>@item.nama</td>
                          <td>
                              <a href="/Home/Detail?npp=@item.npp" class="btn btn-sm btn-info">Detail</a>
                          </td>
                      </tr>
               }
            </tbody>
        </table>
    </div>
</div>
