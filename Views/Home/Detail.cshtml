
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Title</h3>
            </div>
            <div class="card-body">
                <div class="col-md-4">
                    <form asp-action="UbahKaryawan" asp-controller="Home" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>NPP</label>
                            <input type="text" class="form-control" name="npp" autocomplete="off" value="@Model.data.npp" />
                        </div>
                        <div class="form-group">
                            <label>Nama</label>
                            <input type="text" class="form-control" name="nama" autocomplete="off"  value="@Model.data.nama" />
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="text" class="form-control" name="password" autocomplete="off" value="@Model.data.password" />
                        </div>
                        <button type="submit" class="btn btn-sm btn-success">Simpan</button>
                    </form>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                Footer
            </div>
            <!-- /.card-footer-->
        </div>
    </div>
</div